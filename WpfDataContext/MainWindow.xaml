<Window
	x:Class="WpfDataContext.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WpfDataContext"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="MainWindow"
	Width="800"
	Height="450"
	mc:Ignorable="d">

	<StackPanel
		Name="sp"
		Margin="40"
		HorizontalAlignment="Left"
		VerticalAlignment="Center"
		Orientation="Vertical">
		<Label Name="lblFName" />
		<Label Name="lblAge" />
		<Label Name="lblColor" />
		<ComboBox Name="cmbPeopleFName" DisplayMemberPath="FirstName" />
		<ComboBox Name="cmbPeopleAge" DisplayMemberPath="Age" />
		<ComboBox Name="cmbPeopleColor" DisplayMemberPath="FavoriteColor" />
		<ListBox x:Name="lbPeople" DisplayMemberPath="FirstName" />

	</StackPanel>




</Window>
